<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
<!--    <context:component-scan base-package="cz.thickset.freetime.server"/>-->
    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>

    <bean id="appControler" class="test.remote.AppControler">
        <property name="publicService" ref="publicService"/>
        <property name="publicClient" ref="publicClient"/>
    </bean>

    <bean name="publicFactory" class="test.remote.api.PublicFactory"/>

    <bean name="publicService" class="test.remote.PublicServiceImpl"/>

    <bean id="publicWebService" class="test.remote.ws.PublicWebServiceEndpoint"/>

    <bean id="publicClient" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <!--<property name="serviceUrl" value="http://localhost:8082/PublicService"/>-->
        <property name="serviceUrl" value="http://localhost:8080/remoting/PublicService"/>
        <property name="serviceInterface" value="test.remote.api.PublicService"/>
    </bean>

    <!-- Web Services Exported + Server -->
    <bean name="publicExporter" class="org.springframework.remoting.httpinvoker.SimpleHttpInvokerServiceExporter">
        <property name="service" ref="publicService"/>
        <property name="serviceInterface" value="test.remote.api.PublicService"/>
    </bean>
    <bean id="remotingServer" class="org.springframework.remoting.support.SimpleHttpServerFactoryBean">
        <property name="contexts">
            <util:map>
                <entry key="/PublicService" value-ref="publicExporter"/>
            </util:map>
        </property>
        <property name="port" value="8082" />
    </bean>

    <!-- Web Services Exported + Server -->
    <bean class="org.springframework.remoting.jaxws.SimpleJaxWsServiceExporter">
        <property name="baseAddress" value="http://localhost:8081/"/>
    </bean>
    <bean id="publicWebClient" class="test.remote.ws.PublicWebClient">
        <property name="publicWebService">
            <bean id="publicWebServiceProxy" class="org.springframework.remoting.jaxws.JaxWsPortProxyFactoryBean">
                <property name="serviceInterface" value="test.remote.api.ws.PublicWebService"/>
                <property name="wsdlDocumentUrl" value="http://localhost:8081/PublicWS?WSDL"/>
                <property name="namespaceUri" value="http://remote.test/"/>
                <property name="serviceName" value="PublicWS"/>
                <property name="portName" value="PublicWebServiceEndpointPort"/>
                <property name="lookupServiceOnStartup" value="false"/>
            </bean>
        </property>
    </bean>

</beans>
